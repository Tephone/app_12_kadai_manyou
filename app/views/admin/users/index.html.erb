<p id="notice"><%= notice %></p>

<h1>admin setting</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th class = "go_center">Name</th>
      <th class = "go_center">Email</th>
      <th class = "go_center">Password digest</th>
      <th class = "go_center">Task_num</th>
      <th class = "go_center">Admin</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.tasks.count %>
        <td><%= user.admin %>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
