<h1>Users</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th class = "go_center">Name</th>
      <th class = "go_center">Email</th>
      <!--<th class = "go_center">Password digest</th>-->
      <th class = "go_center">task_num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
       <!--<td><%= user.password_digest %></td>-->
        <td><%= user.tasks.count %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
